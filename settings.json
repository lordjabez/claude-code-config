{
  "enabledPlugins": {
    "beads@beads-marketplace": true
  },
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "hooks": {
    "PostToolUse": [
      {
        "hooks": [
          {
            "command": "npx markdownlint-cli --disable MD013 -- \"**/*.md\" || $(exit 2)",
            "type": "command"
          }
        ],
        "matcher": "Edit|MultiEdit|Write"
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "command": "bd prime",
            "type": "command"
          }
        ],
        "matcher": ""
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "command": "bd prime",
            "type": "command"
          }
        ],
        "matcher": ""
      }
    ]
  },
  "permissions": {
    "allow": [
      "WebSearch",
      "WebFetch(domain:makingofthings.com)",
      "Bash(cat:*)",
      "Bash(chmod:*)",
      "Bash(claude:*)",
      "Bash(claude-sessions:*)",
      "Bash(composer:*)",
      "Bash(docker:*)",
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(gh repo create:*)",
      "Bash(gh repo list:*)",
      "Bash(gh run list:*)",
      "Bash(gh run view:*)",
      "Bash(git:*)",
      "Bash(go:*)",
      "Bash(grep:*)",
      "Bash(jq:*)",
      "Bash(ls:*)",
      "Bash(lsof:*)",
      "Bash(npx:*)",
      "Bash(php:*)",
      "Bash(python:*)",
      "Bash(python3:*)",
      "Bash(terraform init:*)",
      "Bash(terraform plan:*)",
      "Bash(terraform validate:*)",
      "Bash(terraform version:*)",
      "Bash(time:*)",
      "Bash(tmux:*)",
      "Bash(uv:*)",
      "mcp__microsoft-learn__*",
      "mcp__playwright__*",
      "mcp__simple-timeserver__*",
      "Bash(bd:*)",
      "Bash(.specify/scripts/bash/*)"
    ]
  },
